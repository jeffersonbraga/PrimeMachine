							e.printStackTrace();
						} catch (Exception e) {
							e.printStackTrace();
						}

					}
				}

			} catch (InstagramBadRequestException e) {
				
				//ValidateTokensController.validatingTokens(profile.getAccount(), OpSocialBackApplication.opSocialContext);
				ValidateTokensController.validatingTokens(profile.getAccount());
